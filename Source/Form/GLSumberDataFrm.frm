Private Function setData() As Boolean
On Error GoTo errhandler
    skd_dataentry = Text1(0).Text
    snm_dataentry = Text1(1).Text
    sdayseqno = ToNumber(Text1(2).Text)
    scoa_debet = Text1(3).Text
    scoa_kredit = Text1(5).Text
    sgr_dataentry = Text1(7).Text
    
    sQuery = "('" & skd_dataentry & "' ,'"
    sQuery = sQuery & snm_dataentry & "' ,'"
    sQuery = sQuery & sdayseqno & "' ,'"
    sQuery = sQuery & scoa_debet & "' ,'"
    sQuery = sQuery & scoa_kredit & "' ,'"
    sQuery = sQuery & MenuFrm.sUserID & "' ,'"
    sQuery = sQuery & sgr_dataentry & "')"
    
    sUpdate = "call spupdate_tblglsbrdata" & sQuery
    sInsert = "call spinsert_tblglsbrdata" & sQuery
    sDelete = "call spdelete_tblglsbrdata" & sQuery
    setData = True
    Exit Function
errhandler:
MsgBox Err.Description, , "Set Data fail"
End Function



